{
  "manifest_version": 3,
  "name": "Houston, we have a bug",
  "version": "1.0.0",
  "description": "Capture bugs clearly. Annotate screenshots and gather system info.",
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Houston, we have a bug"
  },
  "icons": {
    "16": "images/extension/icon-16.png",
    "48": "images/extension/icon-48.png",
    "128": "images/extension/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["tab.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
