{
  "name": "houston-we-have-a-bug",
  "version": "0.0.1",
  "description": "A Chrome extension for quick bug capture with annotation and context.",
  "scripts": {
    "build": "tsc && sass src/styles:styles",
    "watch": "concurrently \"tsc --watch\" \"sass --watch src/styles:styles\"",
    "clean": "rm -rf dist styles"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "sass": "^1.69.5",
    "typescript": "^5.3.3"
  }
}
